{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %} NH Plateforme{% endblock %}</title>{#création du bloc title#}

    {% block stylesheets %}
    {#on charge le CSS de Bootstrap depuis le site #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
</head>

<body>
<div class="container">
    <div id="header" class="jumbotron">
        <h1>Les annonces </h1>
        <p></p>
    </div>

    <div class="row">
        <div id="menu" class="col-md-3">
            <h3>Afficher les annonces</h3>
            <ul class="nav nav-pills nav-stacked">
                {#utilisation de la fonction path pour faire des liens vers d'autres routes#}
                <li><a href="{{ path('nh_platform_home') }}">Accueil</a></li>
                <li><a href="{{ path('nh_platform_add') }}">Ajout d'une annonce</a></li>
            </ul>

            <h4>Dernières annonces</h4>
            {#inclusion de la méthode menu du contrôleur advert avec l'argument nombre défini à 3#}
            {{ render(controller("NHPlatformBundle:Advert:menu", {'limit':3})) }}
        </div>
        <div id="content" class="col-md-9">
            {#création du bloc body sans contenu par défaut#}
            {% block body %}
            {% endblock %}
        </div>
    </div>
    <hr>
    <footer>
        <p>the sky's the limit {{ 'now'|date('Y') }} and beyond.</p>
    </footer>
</div>

</body>
</html>