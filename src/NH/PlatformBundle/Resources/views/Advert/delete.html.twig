{# src/NH/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "NHPlatformBundle::layout.html.twig" %}

{% block title %}
    Supprimer une annonce - {{ parent() }}
{% endblock %}

{% block nhplatform_body %}

    <h2> Supprimer une annonce</h2>
    <p> Etes-vous certain de vouloir supprimer l'annonce "{{ advert.titre }}" ?</p>

    {# On met l'id de l'annonce dans la route de l'action #}
<form action="{{ path('nh_platform_delete', {'id': advert.id}) }}" method="post">
        <a href="{{ path('nh_platform_view', {'id': advert.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à l'annonce
        </a>
        {# bouton de soumission à la main #}
        <input type="submit" value="Supprimer" class="btn btn-danger" />
</form>
{% endblock %}